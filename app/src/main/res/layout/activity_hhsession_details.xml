<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/session_details_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >
            <TextView
                android:id="@+id/hh_session_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/table_text_selector"
                android:text="Unit name"/>
            <TextView
                android:id="@+id/hh_session_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/table_text_selector"
                android:text="Specialty description"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/hh_session_observer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/table_text_light_selector"
                            android:text="Observer Name"/>
                        <TextView
                            android:id="@+id/hh_session_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/table_text_light_selector"
                            android:text="Session Start Time"/>
                        <TextView
                            android:id="@+id/hh_session_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:visibility="gone"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/table_text_light_selector"
                            android:text="Session End Time"/>
                    </LinearLayout>
                <ImageView
                    android:id="@+id/hh_session_status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/avatar"
                    android:background="@drawable/primary_status_icon_background"
                    android:src="@drawable/ic_edit_white_24dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/observation_list_title"
            android:layout_below="@+id/session_details_section"
            android:paddingTop="2dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/table_text_selector"
            android:text="@string/hh_obserations_title"
            android:layout_marginLeft="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bootstrap_divider"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/observation_list_wrapper"
            android:layout_below="@+id/observation_list_title"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/hh_session_observation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/session_complete"
            android:layout_below="@+id/observation_list_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/audit_hh_session_complete"
            style="@style/ShadowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_background_states"
            android:gravity="center"
            android:onClick="complteSession"
            android:padding="15dp"
            android:text="@string/audit_hh_comple_session"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_hh_observation_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@drawable/ic_add_circle_outline_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>