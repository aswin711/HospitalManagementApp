<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/primary">

    <!--<ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/navigation_drawer_list_header_linear_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="1.0"
        android:id="@+id/version"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:visibility="visible"/>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/navigation_drawer_list_header_user_pic"
            android:src="@drawable/app_icon"/>

        <TextView
            android:id="@+id/navigation_drawer_list_header_user"
            android:layout_below="@+id/navigation_drawer_list_header_user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="@string/Unknown_user"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:id="@+id/navigation_drawer_list_header_hospital"
            android:layout_below="@+id/navigation_drawer_list_header_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="@string/default_hospital_name"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>