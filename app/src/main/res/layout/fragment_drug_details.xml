<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.synnefx.cqms.event.ui.drugreaction.DrugReactionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="2dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/suspected_drug"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:completionThreshold="1"
                    android:hint="@string/suspected_drug"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPersonName" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="2dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/drug_dose"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:completionThreshold="1"
                    android:hint="@string/drug_dose"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPersonName" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="2dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/drug_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:completionThreshold="1"
                    android:hint="@string/drug_frequency"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPersonName" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="2dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/drug_route"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:completionThreshold="1"
                    android:hint="@string/drug_route"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPersonName" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.75"
                    android:layout_marginTop="@dimen/edit_margin"
                    float:fletPadding="2dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/drug_dt_started"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="@dimen/edit_margin"
                        android:completionThreshold="1"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/drug_dt_started"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="none" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>



                <com.rey.material.widget.Button
                    android:id="@+id/drug_dt_started_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bt_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/edit_margin"
                    android:layout_weight="0.25"
                    android:background="@drawable/date_btn_bg"
                    android:text="Change"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.75"
                    android:layout_marginTop="@dimen/edit_margin"
                    float:fletPadding="2dp">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/drug_dt_ceased"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="@dimen/edit_margin"
                        android:completionThreshold="1"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/drug_dt_ceased"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="none" />

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>



                <com.rey.material.widget.Button
                    android:id="@+id/drug_dt_ceased_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/bt_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/edit_margin"
                    android:layout_weight="0.25"
                    android:background="@drawable/date_btn_bg"
                    android:text="Change"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/incident_details_save"
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/incident_details_save"
                android:textColor="#fff"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


